<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DhobiKart" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Other theme attributes -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/on_background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/on_surface_color</item>
        <item name="colorSurfaceVariant">@color/surface_variant_color</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_color</item>
        <item name="colorOutline">@color/outline_color</item>

        <item name="android:fontFamily">@font/app_font</item>

        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Theme.DhobiKart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearance.App.Corner.Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.DhobiKart.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Custom style for the light gray buttons -->
    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/light_gray_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">#F5F6F8</item>

        <!-- Rounded corners -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

        <!-- Remove black line -->
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>

        <!-- Hint text color -->
        <item name="android:textColorHint">#6E7C87</item>
        <item name="hintTextColor">@color/hint_color_selector</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>