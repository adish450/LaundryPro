<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:minHeight="150dp">

        <View
            android:id="@+id/offer_title_placeholder"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:background="?attr/colorSurfaceContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <View
            android:id="@+id/offer_description_placeholder"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorSurfaceContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/offer_title_placeholder"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/offer_code_placeholder"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/colorSurfaceContainer"
            app:layout_constraintBottom_toTopOf="@id/offer_validity_placeholder"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/offer_validity_placeholder"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:background="?attr/colorSurfaceContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>